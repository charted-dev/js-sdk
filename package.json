{
    "name": "@ncharts/root",
    "description": "🐻‍❄️📦 Root project for @ncharts/sdk",
    "private": true,
    "version": "0.0.0-dev.0",
    "packageManager": "yarn@3.5.0",
    "workspaces": [
        "packages/sdk",
        "packages/types"
    ],
    "scripts": {
        "generate:types": "tsx --tsconfig ./scripts/tsconfig.json ./scripts/generate-types.ts",
        "build": "yarn fmt && yarn lint && rimraf dist && tsx --tsconfig ./scripts/tsconfig.json scripts/build.ts",
        "lint": "tsx --tsconfig ./scripts/tsconfig.json scripts/eslint.ts",
        "fmt": "prettier --config ./.prettierrc.json --write **/*.{md,ts,js,tsx,mdx,yaml,yml,json}"
    },
    "devDependencies": {
        "@actions/core": "1.10.0",
        "@augu/eslint-config": "4.0.1",
        "@augu/tsconfig": "1.1.1",
        "@jsdevtools/npm-publish": "2.0.0",
        "@noelware/utils": "2.2.1",
        "@types/eslint": "8.37.0",
        "@types/node": "18.15.12",
        "@types/prettier": "2.7.2",
        "@types/signale": "1.4.4",
        "@typescript-eslint/eslint-plugin": "5.59.0",
        "@typescript-eslint/parser": "5.59.0",
        "colorette": "2.0.20",
        "eslint": "8.38.0",
        "eslint-config-prettier": "8.8.0",
        "log-symbols": "5.1.0",
        "openapi-typescript": "6.2.1",
        "prettier": "2.8.7",
        "rimraf": "5.0.0",
        "signale": "1.4.0",
        "tsup": "6.7.0",
        "tsx": "3.12.6",
        "typescript": "5.0.4"
    }
}
